{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":automergeLinters",
    ":automergeMinor",
    ":automergeTypes",
    ":maintainLockFilesWeekly",
    "group:allNonMajor",
    "group:definitelyTyped",
    "group:linters",
    "schedule:monthly"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "ignoreDeps": ["react-tweet"]
}
